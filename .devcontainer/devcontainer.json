{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "4gb"
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "flask --debug run"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "templates/index.html"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "forwardPorts": [5000],
    "portsAttributes": {
    "5000": {
      "label": "Application",
      "onAutoForward": "notify",
      "requireLocalPort": false,
      "visibility": "public"
    }
  }
}
